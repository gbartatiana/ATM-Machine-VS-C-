<Window x:Class="BankATM.DepositPaperMoney"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankATM"
        mc:Ignorable="d"
        Title="DepositPaperMoney" Height="420" Width="500">
    <Grid HorizontalAlignment="Left">

        <WrapPanel Orientation="Vertical">
            <TextBox x:Name="textBox" Height="72" Width="493" Text="DEPOSIT MONEY TO ATM" Background="#FF34456D" FontSize="24" Foreground="#FFF0F0F0" TextAlignment="Center" VerticalContentAlignment="Center"/>
        </WrapPanel>
        <Label Content="Available ATM Balance:" HorizontalAlignment="Right" FontSize="16" Width="192" Margin="0,113,147.6,233.4" FontWeight="Bold" />
        <TextBox x:Name="availableBalance" Margin="148,157,147.6,173.4" FontSize="24"  TextAlignment="Center" FontWeight="Bold" MaxLength="4"  RenderTransformOrigin="0.5,0.5" BorderBrush="{x:Null}"/>

        <Button x:Name="btnFillAtm" Content="Fill ATM to C$20.000" Margin="152,267,150.6,71.4" Background="#FF34456D" Foreground="White"  RenderTransformOrigin="0.5,0.5" FontSize="16" FontWeight="Bold" Click="btnFillAtm_Click" />
    </Grid>
</Window>
